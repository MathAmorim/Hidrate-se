<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog para adicionar quantidade personalizada -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar Água"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade (ml)"
        android:textColorHint="#9ca3af"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="#374151"
        app:boxStrokeColor="@color/primary_color"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        android:layout_marginBottom="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_custom_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:inputType="number"
            android:maxLength="5" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Quick Suggestions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugestões:"
        android:textColor="#9ca3af"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150ml"
            android:layout_marginEnd="8dp"
            app:chipBackgroundColor="#374151"
            app:chipStrokeWidth="0dp"
            android:textColor="#FFFFFF" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200ml"
            android:layout_marginEnd="8dp"
            app:chipBackgroundColor="#374151"
            app:chipStrokeWidth="0dp"
            android:textColor="#FFFFFF" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300ml"
            app:chipBackgroundColor="#374151"
            app:chipStrokeWidth="0dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#9ca3af"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar"
            android:textColor="#FFFFFF"
            app:backgroundTint="@color/primary_color"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
