<?xml version="1.0" encoding="utf-8"?>
<!-- Item do histórico de consumo de água -->
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1f2937"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Timeline Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="16dp">

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#374151" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/primary_color" />

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#374151" />

        </LinearLayout>

        <!-- Water Icon -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_water_glass"
            android:tint="@color/primary_color"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:background="@drawable/icon_circle_background" />

        <!-- Entry Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_entry_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250ml"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_entry_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:textColor="#9ca3af"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete_entry"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_trash"
            android:tint="#ef4444"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Deletar entrada" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
