<?xml version="1.0" encoding="utf-8"?>
<!-- Header do Navigation Drawer -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="24dp"
    android:background="@drawable/nav_header_gradient">

    <!-- App Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_water_glass"
        android:tint="@color/primary_color"
        android:layout_marginBottom="16dp" />

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hidrate-se"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tv_nav_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá, Usuário"
        android:textColor="#d1d5db"
        android:textSize="14sp" />

</LinearLayout>
