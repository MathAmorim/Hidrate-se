<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left Side: Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/widget_tv_incentive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenha-se hidratado!"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/widget_tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0ml / 2000ml"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />

            <ProgressBar
                android:id="@+id/widget_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="6dp"
                android:progressDrawable="@drawable/widget_progress_horizontal"
                android:progress="0"
                android:max="100" />
                <!-- Note: circular_progress_primary might be a ring, need to check if it works as horizontal bar or use standard drawable -->

        </LinearLayout>

        <!-- Right Side: Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/widget_btn_add_200"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/widget_button_background"
                android:text="+200"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/widget_btn_add_500"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/widget_button_background"
                android:text="+500"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
