<?xml version="1.0" encoding="utf-8"?>
<!-- Tema do App Hidrate-se -->
<resources>
    
    <!-- Base Application Theme -->
    <style name="Theme.Hidratese" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background_primary</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.Hidratese.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Hidratese</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.Hidratese.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.Hidratese.Button.Secondary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary_color</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.Hidratese.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary_color</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.Hidratese.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    
    <style name="Widget.Hidratese.Card.Glass" parent="Widget.Hidratese.Card">
        <item name="cardBackgroundColor">@color/glass_background</item>
        <item name="strokeColor">@color/glass_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- TextInputLayout Styles -->
    <style name="Widget.Hidratese.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background_tertiary</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColorHint">@color/text_tertiary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
    
</resources>
